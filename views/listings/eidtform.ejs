


    <%- layout('/layouts/boilerplate.ejs') %>

<div class="row col-8 offset- -3">
        <h4>Edit Form!</h4>    
        <form method="post" action="/listing/<%= singleList._id %>/edit/updated?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="form-group">
                <label for="title" class="form-label">Title:</label>
                <input class="form-control" type="text" name="singleList[title]" value="<%= singleList.title %>" required> 
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Should be enter valid title</div>
            </div>
    
            <div class="form-group">
                <label for="description" class="form-label">Description:</label>
                <textarea class="form-control" name="singleList[description]" required><%= singleList.description %></textarea>
                <div class="invalid-feedback">Should be enter a short description</div>
            </div>

            <div class="mb-3">
             <div>
                <img src="<%= originalImageUrl %>" alt="">
             </div>
            </div>
          
            <div class="form-group">
                <label for="img_url" class="form-label">Image URL:</label>
                <input type="file" class="form-control" name="singleList[image][url]" value="<%= singleList.image.url %>" id="img_url" required>
                <div class="invalid-feedback">Should be enter image url</div>
            </div>
    
            <div class="form-group">
                <label for="price" class="form-label">Price:</label>
                <input type="number" class="form-control" name="singleList[price]" value="<%= singleList.price %>" id="price" required>
                <div class="invalid-feedback">Should be enter valid price</div>

            </div>
    
            <div class="form-group" >
                <label for="location">Location:</label>
                <input type="text" class="form-control" name="singleList[location]" value="<%= singleList.location %>" id="location" required> 
                <div class="invalid-feedback">Should be enter valid image</div>

            </div>
    
            <div class="form-group">
                <label for="country" class="form-label">Country:</label>
                <input type="text" class="form-control" name="singleList[country]" value="<%= singleList.country %>"  id="country" required>
                <div class="invalid-feedback">Should be enter valid countyr name</div>

            </div>
        
            <button class="btn btn-primary">Update this List!</button>
        </form>
    </div>
    <script src="JS/script.js"></script>

   