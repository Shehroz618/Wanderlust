    <div class="row justify-content-center">
 
      <% for(let list of listing){ %>
        <a class="cardAncor flex " href="/listing/<%= list.id %>/listinfo" style="text-decoration: none; color: black; ">
         <div class="card listing-card " style="width: 23rem;">
           <img class="card-img-top" src="<%= list.image.url %>" alt="Card image cap" style="height: 18rem; width: 85%;">
           <div class="card-body" >
           <div>  <b class="card-text"><%= list.title %></b> <br></div>
           <div style="display: flex; justify-content: center;">             
             PKR: <%= list.price ? list.price.toLocaleString("en-PK") : "Price not available" %>/Night <i class="gst">+18% GST</i>
           </div>
             
             
           </div>
         </div>  
        </a>
     
           <% } %>
   
  
    </div>


    <script type="text/javascript">
      
      const gstBtn = document.querySelector("#flexSwitchCheckChecked");
      gstBtn.addEventListener("click",()=>{
        const gstTags = document.querySelectorAll('.gst')
        for(let gst of gstTags){
          gst.classList.toggle('gst-active');  
        }
      })

      $(document).ready(function(){
      $('.icon-carousel').slick({
        slidesToShow: 4,  // Show 4 icons at once
        slidesToScroll: 1, // Scroll 1 icon at a time
        prevArrow: '<button class="slick-prev">←</button>',
        nextArrow: '<button class="slick-next">→</button>',
        responsive: [
          {
            breakpoint: 768,
            settings: {
              slidesToShow: 2, // Show 2 icons on smaller screens
              slidesToScroll: 1
            }
          },
          {
            breakpoint: 480,
            settings: {
              slidesToShow: 1, // Show 1 icon on mobile
              slidesToScroll: 1
            }
          }
        ]
      });
    });
     
    const iconItems = document.querySelectorAll('.icon-item');

    for(let iconItem of iconItems){
      iconItem.addEventListener("click",function(){
        const theme = this.getAttribute('data-theme');
        window.location.href = `/listing/filter?theme=${theme}`;
      })
    }
    </script>